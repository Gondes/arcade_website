<script>
$(document).ready(
  function() {
    setInterval(function() {
      location.reload();
    }, 5000);
  });
</script>

<h1>Rock Paper Scissor rounds</h1>

<% if @game.finished? %>     <!--Winner Message-->
  <% if @game.winner.nil? %>
    <strong>Result: It's a tie!</strong>
  <% else %>
    <strong>Result: <%= @game.winner.name %> wins this game!</strong>
  <% end %>
<% else %>
  <strong></strong>
<% end %>

<table border="4" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Round</th>
      <th><%= @game.player_1.name %>'s move</th>
      <th><%= @game.player_2.name %>'s move</th>
      <th>Winner</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      <tr>
        <td><%= round.round_number %></td>
        <% if round.finished? %>     <!--Winner Column-->
          <td><%= round.user_1_move %></td>
          <td><%= round.user_2_move %></td>
          <% if round.tie %>
            <td>Tie!</td>
          <% else %>
            <td><%= round.winner.name %> Wins!</td>
          <% end %>
        <% elsif !round.is_locked? %>
          <% if round.user_1_move.nil? %>
            <td>deciding...</td>
          <% else %>
            <td>locked in</td>
          <% end %>
          <% if round.user_2_move.nil? %>
            <td>deciding...</td>
          <% else %>
            <td>locked in</td>
          <% end %>
          <td></td>
        <% else %>
          <td></td>
          <td></td>
          <td></td>
        <% end %>

        <% if round.is_locked? %>
          <td></td>
        <% elsif round.finished? %>     <!--Options Column-->
          <td>Done</td>
        <% else %>
          <td><%= link_to 'Play', edit_rock_paper_scissor_round_path(round)%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= button_to 'Back', games_path, :method => "get" %>
