<h1>List of Games</h1>

<% if !@games.empty? %>
<table border="4" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Game</th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Winner</th>
      <th>Status</th>
      <th>Best Of</th>
      <th colspan="1">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.clean_name %></td>
        <td><%= game.player_1.name %></td>
        <td><%= game.player_2.name %></td>

        <% if !game.finished? %>
          <td></td>
        <% elsif game.winner.nil? %>   <!--Winner Column-->
          <td>Tie!</td>
        <% else %>
          <td><%= game.winner.name %></td>
        <% end %>

        <% if game.finished? %>   <!--Status Column-->
          <td>Finished</td>
        <% else %>
          <td>In Progress</td>
        <% end %>
        <td><%= game.round_count %></td>

        <% if game.finished? %>   <!--Option Column-->
          <td><%= link_to 'Results', game %></td>
        <% elsif game.player_1.id == current_user.id || game.player_2.id == current_user.id %>
          <td><%= link_to 'Play', rock_paper_scissor_rounds_url(game_id: game.id)  %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h2>There are no recorded games</h2>
<% end %>

<br>
