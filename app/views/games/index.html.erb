<h1>Listing games</h1>

<table border="1">
  <thead>
    <tr>
      <th>User 1</th>
      <th>User 2</th>
      <th>Winner</th>
      <th>Done</th>
      <th>Best Of</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.player_1.name %></td>
        <td><%= game.player_2.name %></td>
        <td><%= game.winner_id %></td>
        <td><%= game.done %></td>
        <td><%= game.best_of %></td>
        <td><%= link_to 'Start', rounds_url(game_id: game.id)  %></td>
        <td><%= link_to 'Results', game %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
<%= link_to 'Home', root_path %>
