<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Select Game Type' %><br>
    <%= f.radio_button :name, 'rock_paper_scissor', :checked => true %>
    <%= f.label :name, 'Rock Paper Scissor' %><br>
  </div>
  <div class="field">
    <%= f.label :player_1 %><br>
    <%= f.select :user_1_id, options_from_collection_for_select(User.all, 'id', 'name') %>
  </div>
  <div class="field">
    <%= f.label :player_2 %><br>
    <%= f.select :user_2_id, options_from_collection_for_select(User.all, 'id', 'name') %>
  </div>
  <div class="field">
    <%= f.label :round_count, 'Select Round Count' %><br>
    <%= f.radio_button :round_count, '1', :checked => true %>
    <%= f.label :round_count, 'Best of 1' %><br>
    <%= f.radio_button :round_count, '3', :checked => false %>
    <%= f.label :round_count, 'Best of 3' %><br>
    <%= f.radio_button :round_count, '5', :checked => false %>
    <%= f.label :round_count, 'Best of 5' %><br>
    <%= f.radio_button :round_count, '7', :checked => false %>
    <%= f.label :round_count, 'Best of 7' %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
