<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :general_forum_topic_id %><br>
    <%= f.select :general_forum_topic_id, options_from_collection_for_select(GeneralForumTopic.all, 'id', 'title') %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, maxlength: 64, size: 64, placeholder: 'Enter title less then or equal to 64 characters' %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="hidden_fields">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <% if @topic.exist? %>
    <div class="actions">
      <%= f.label :closed, "Close this discussion?" %>
      <%= f.check_box :closed %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
