<% if user_signed_in? && !current_user.id.nil? && current_user.id == @user.id %>
  <h2>Profile: <%=@user.user_name %></h2>

  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>
  
  <p>
    <strong>Games Played:</strong>
    <%= @user.games_played_count %>
  </p>

  <p>
    <strong>Wins Total:</strong>
    <%= @user.wins_count %>
  </p>

  <p>
    <strong>Loss Total:</strong>
    <%= @user.loss_count %>
  </p>

  <p>
    <strong>Ties Total:</strong>
    <%= @user.tie_count %>
  </p>

  <p>
    <strong>Best Win Streak:</strong>
    <%= @user.best_win_streak %>
  </p>

  <p>
    <strong>Current Win Streak:</strong>
    <%= @user.current_win_streak %>
  </p>

  <td><%= link_to 'Edit', edit_user_path(@user) %></td>
  <td><%= link_to 'Reset', reset_stats_users_path(@user), method: :put, data: { confirm: 'Are you sure you want to reset your stats?' } %></td><br>
<% else %>
  <h1>Woops!</h1>
  <p>You tried to access someone else's profile. That's not cool.</p>
<% end %>

<%= link_to 'Back', users_path %>
